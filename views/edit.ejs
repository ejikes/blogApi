<div style="max-width: 900px; margin: 0 auto;">
  <h1 style="font-size: 2.5rem; font-weight: bold; margin-bottom: 2rem; color: #1f2937;">
    Edit Blog
  </h1>

  <div class="card" style="padding: 2rem;">
    <form method="POST" action="/blogs/<%= blog._id %>?_method=PUT">
      <div class="form-group">
        <label for="title">Title *</label>
        <input 
          type="text" 
          id="title" 
          name="title" 
          value="<%= blog.title %>" 
          required
          autofocus
        />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <input 
          type="text" 
          id="description" 
          name="description" 
          value="<%= blog.description || '' %>"
        />
        <small style="color: #6b7280; font-size: 0.875rem;">
          This will appear in blog previews and search results
        </small>
      </div>

      <div class="form-group">
        <label for="body">Content *</label>
        <textarea 
          id="body" 
          name="body" 
          required
          style="min-height: 400px;"
        ><%= blog.body %></textarea>
        <small style="color: #6b7280; font-size: 0.875rem;">
          Minimum 20 characters required
        </small>
      </div>

      <div class="form-group">
        <label for="tags">Tags</label>
        <input 
          type="text" 
          id="tags" 
          name="tags" 
          value="<%= blog.tags && blog.tags.length > 0 ? blog.tags.join(', ') : '' %>"
        />
        <small style="color: #6b7280; font-size: 0.875rem;">
          Separate tags with commas
        </small>
      </div>

      <div style="display: flex; gap: 1rem; margin-top: 2rem;">
        <button type="submit" class="btn btn-primary">
          Update Blog
        </button>
        <a href="/dashboard" class="btn btn-secondary">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
